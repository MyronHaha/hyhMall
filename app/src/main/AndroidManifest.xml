        <activity android:name=".com.example.myron.heyihui.activity.GuideActivity" />
        <activity
            android:name=".com.example.myron.heyihui.activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.example.myron.heyihui.activity.FirstPage"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".com.example.myron.heyihui.activity.Mall.SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".com.example.myron.heyihui.activity.Mall.MallListActivity"
            android:launchMode="singleTop"
