<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#eeeeee">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--退出登录-->
        <TextView
            android:id="@+id/tv_disLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="14dp"
            android:text="退出"
            android:textColor="@drawable/selector_btn_tx" />
        <!--头像id-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14dp"
            android:paddingBottom="13dp"
            android:layout_marginLeft="26dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingLeft="12dp"
                android:text="合壹汇"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
        <!--余额-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="35dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="余额"
                android:textColor="#ff3f3f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="4dp"
                android:text="0.00"
                android:textColor="#ff3f3f"
                android:textSize="13sp" />
        </LinearLayout>
        <!--资金 积分 需求-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资金"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_zijin"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>
            <!--分隔线-->
            <TextView android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="积分"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tv_jf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
            <!--分隔线-->
            <TextView android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="需求"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_xq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--收入-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <LinearLayout
            android:id="@+id/ll_month_get"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@mipmap/icon_mysr"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="本月收入"
                    android:textColor="#3d3d3d"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="#939393"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_month_pay"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingRight="30dp"
            android:paddingLeft="23dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@mipmap/icon_myzc"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="本月支出"
                    android:textColor="#3d3d3d"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_zc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="#939393"
                    android:textSize="13sp" />
            </LinearLayout>
           
        </LinearLayout>
    </LinearLayout>
    <!--需求-->
    <RelativeLayout
        android:id="@+id/rl_xq"
        android:background="#ffffff"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
       <ImageView
           android:id="@+id/iv1"
           android:layout_centerVertical="true"
           android:layout_width="18dp"
           android:layout_height="18dp"
           android:src="@mipmap/icon_myxq"/>
      <TextView
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/iv1"
          android:paddingLeft="6dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="需求 "
          android:textSize="14sp"
          android:gravity="center_vertical"
          android:textColor="#3d3d3d"/>
        <ImageView
            android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="18dp"
           android:src="@mipmap/icon_jiantou"/>
    </RelativeLayout>
    <!--分隔线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:paddingLeft="38dp"
        android:background="#eeeeee"/>
    <!--积分-->
    <RelativeLayout
        android:id="@+id/rl_jf"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <ImageView
            android:id="@+id/iv2"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_mydb"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv2"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分 "
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#3d3d3d"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@mipmap/icon_jiantou"/>
    </RelativeLayout>
    <!--分隔线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:paddingLeft="36dp"
        android:background="#eeeeee"/>
    <!--消息-->
    <RelativeLayout
        android:id="@+id/rl_msg"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <ImageView
            android:id="@+id/iv3"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_xxh"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv3"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息 "
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:textColor="#3d3d3d"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@mipmap/icon_jiantou"/>
    </RelativeLayout>
    <!--意见-->
    <RelativeLayout
        android:id="@+id/rl_jy"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <ImageView
            android:id="@+id/iv4"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_myyj"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv4"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见 "
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#3d3d3d"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@mipmap/icon_jiantou"/>
    </RelativeLayout>

    <!--<RelativeLayout android:layout_marginTop="4dp"-->
        <!--android:background="#ffffff"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
