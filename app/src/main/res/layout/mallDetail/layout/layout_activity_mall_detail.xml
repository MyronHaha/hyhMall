<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/app_header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--banner-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#c3c3c3" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/red_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="￥20.8-98.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/c01_15"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="钱璟一次性使用直线型切割吻合器和钉仓组件"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

                <LinearLayout
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_share"
                    android:orientation="horizontal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_name">

                    <TextView
                        style="@style/white_13_ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="2dp"
                        android:text="分享" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_catagory"
                    style="@style/et_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="外科 皮肤科"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#edecec" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/t_danwei"
                    style="@style/c7_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位" />

                <TextView
                    android:id="@+id/tv_danwei"
                    style="@style/black_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盒"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t_brand"
                    style="@style/c7_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="品牌"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t_danwei" />

                <TextView
                    android:id="@+id/tv_brand"
                    style="@style/black_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Monosyn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_danwei" />

                <TextView
                    android:id="@+id/t_pzwh"
                    style="@style/c7_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="批准文号"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t_brand" />

                <TextView
                    android:id="@+id/tv_pzwh"
                    style="@style/black_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="沪械注准20152650270"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_brand" />

                <TextView
                    android:id="@+id/t_mt"
                    style="@style/c7_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="厂家"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t_pzwh" />

                <TextView
                    android:id="@+id/tv_mt"
                    style="@style/black_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="德国贝朗医疗有限公司"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pzwh" />

                <TextView
                    android:id="@+id/t_ctgy"
                    style="@style/c7_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="分类"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t_mt" />

                <TextView
                    android:id="@+id/tv_ctgy"
                    style="@style/black_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="骨科材料"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mt" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#edecec" />

            <LinearLayout
                android:id="@+id/chooseParmas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="选择" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="选择 规格 数量" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#edecec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <TextView
                    style="@style/black_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门产品" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hotProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#edecec">

                <TextView
                    style="@style/c7_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="详情" />
            </LinearLayout>

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:nestedScrollingEnabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/subsampling_scale_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#edecec">

                <TextView
                    style="@style/c7_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="---已经到底了---" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#f2fcfd"
            android:layout_width="0dp"
            android:layout_weight="155"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="43dp"
                android:id="@+id/left"
             android:layout_gravity="center_vertical"
             android:layout_centerVertical="true"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_gravity="center_horizontal"
                 android:src="@mipmap/icon"
                 android:layout_width="17dp"
                 android:layout_height="17dp" />
             <TextView
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="4dp"
                 style="@style/c7_13"
                 android:text="客服"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
         </LinearLayout>
            <LinearLayout
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="29dp"
                android:layout_toRightOf="@id/left"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    style="@style/c7_13"
                    android:text="收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="0.5dp"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:background="#1ae1fb"
                style="@style/white_15"
                android:text="加入购物车"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="0.5dp"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:background="#02cdf8"
                style="@style/white_15"
                android:text="立即下单"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>