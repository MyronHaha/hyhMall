<?xml version="1.0" encoding="utf-8"?>
<com.liaoinstan.springview.widget.SpringView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/springView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape5"
                    android:drawableLeft="@mipmap/search"
                    android:hint="  搜索产品"
                    android:textSize="15dp" />
                <!--     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="搜索"
                         android:textColor="#6ce6f5"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3d3d3d"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3d3d3d"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3d3d3d"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cursor"
                android:layout_width="130dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="10dp"
                zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>

            <ListView
                android:background="#ffffff"
                android:layout_marginTop="7dp"
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
       />
        </LinearLayout>
    </ScrollView>
</com.liaoinstan.springview.widget.SpringView>



