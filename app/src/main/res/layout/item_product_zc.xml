<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:paddingBottom="13dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:paddingLeft="2dp"
                android:text="医用脱脂棉 "
                android:textColor="#3d3d3d"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:paddingLeft="2dp"
                android:text="(盒)"
                android:textColor="#939393"
                android:textSize="12sp" />
        </RelativeLayout>
        <!--型号-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="型号："
                android:textColor="#939393"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tv_xh"
                android:layout_toRightOf="@id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="20克了肯定是建安费了多久拉夫简单了看"
                android:textColor="#939393"
                android:textSize="12dp" />
        </RelativeLayout>
        <!--规格-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="规格："
                android:textColor="#939393"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="20克/包3/4/5/6/7/8/9/11/13孔骷髅法师的发多少付了款"
                android:textColor="#939393"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingTop="8dp"
            android:text="广州市番禺万福卫生用品有限公司"
            android:textColor="#939393"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">




        <TextView
            android:id="@+id/tv_single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="2dp"
            android:text="¥57"
            android:drawablePadding="10dp"
            android:textColor="#ff6060"
            android:textSize="14sp"
            android:drawableRight="@mipmap/icon_jiantou"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:text="  X5"
            android:textColor="#939393"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>