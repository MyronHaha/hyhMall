<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/iv_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="12dp"
        android:background="@drawable/shape_img_bg"
        android:layout_width="117dp"
        android:layout_height="88dp"
        >
<ImageView
    android:id="@+id/iv"
    android:maxWidth="117dp"
    android:maxHeight="88dp"
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        style="@style/black_14"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_content"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
      />
    <TextView
        style="@style/c55_13"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/iv_content"
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:text="尖峰时刻劳动法讲述了快递费讲述了快递费建设路口打飞机了斯柯达"
        style="@style/et_hint"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_company"
        app:layout_constraintLeft_toRightOf="@id/iv_content"
        android:id="@+id/tv_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        />
<TextView
    android:layout_marginTop="6dp"
    android:id="@+id/tv_price"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@id/tv_catagory"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/iv_content"
    android:layout_marginRight="10dp"
    style="@style/red_15"
    android:text="价格登录可见"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<View
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#eef0ef"/>


</android.support.constraint.ConstraintLayout>